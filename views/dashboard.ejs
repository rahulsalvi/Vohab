<!DOCTYPE html>
<html>
  <head>
    <title><%= dashboard %></title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/c3/0.4.10/c3.min.css">

    <!-- c3 and d3 -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.6.4/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/c3/0.4.10/c3.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/d3/3.5.16/d3.min.js"></script>
  </head>

  <body>

    <!-- Navigation -->
    <ul id="dashboard-nav" class="drop-shadow">
      <li><img src="images/networking-filled.png" style="height: 90px" alt="Vohab Logo"></li>
      <li><h1 style="font-size: 30px; margin-left: 30px">VOHAB: Vocabulary Habits for Life</h1></li>
      <!-- <li><h3>Ready to see your speech analytics today, Laura?</h3></li> -->
      <!-- <li><p>Welcome to your vohab.co dashboard!</p></li> -->
      <!-- <input type="button" value="Logout"></input> -->

      <!-- Profile Picture -->
      <li><img id="brett" src="images/brett-cropped.png" style="float: right; position: absolute; right: 220px; width: 85px; padding-top: -10px"></li>

      <!-- Logout -->
      <form method="get" action="/">
        <input style="color:black" type="image" id="buttonForLogout" src="/images/button copy.png" value="Logout"></input>
      </form>
    </ul>

    <!-- White body -->
    <div class="middle-opaque">
      <h1 style="font-size:30px">Dashboard</h1>

      <!-- Frequency -->
      <div class="col-md-4" id="frequencyDiv">
        <p style="clear: left">Frequency Div</p>
        <div id="chart"></div>
      </div>

      <!-- Sentiment -->
      <div class="col-md-4" id="sentimentDiv">
        <p>Sentiment Div</p>
        <div id="chart2"></div>
      </div>

      <!-- Tone -->
      <div class="row" id="toneDiv">
        <div class="col-xs-4 toneGraphDiv">
          <p>Tone Gauge Chart - Day</p>
          <div id="toneGaugeTodayChart"></div>
        </div>
        <div class="col-xs-4 toneGraphDiv">
          <p>Tone Gauge Chart - Week</p>
          <div id="toneGaugeWeekChart"></div>
        </div>
        <div class="col-xs-4 toneGraphDiv">
          <p>Tone Gauge Chart - Month</p>
          <div id="toneGaugeMonthChart"></div>
        </div>
      </div>

      <!-- Emotion -->
      <div class="col-md-4" id="emotionDiv">
        <p>Emotion</p>
        <div id="chart4"></div>
      </div>

    </div>

      <script>

      // Word frequency chart for today chart
          var chart = c3.generate({
            bindto: '#chart',
            data: {
              columns: [ 
                [ 'is', '1' ],
                [ 'in', '1' ],
                [ 'be', '2' ],
                [ 'forty', '1' ],
                [ 'years', '1' ],
                [ 'smoking', '1' ],
                [ 'pictures', '1' ],
                [ 'fifty', '1' ],
                [ 'this', '1' ],
                [ 'how', '1' ],
                [ 'do', '1' ],
                [ 'of', '2' ],
                [ 'to', '1' ],
                [ '&lt;profanity&gt;shit&lt;/profanity&gt;', '1' ],
                [ 'like', '1' ],
                [ 'big', '1' ],
                [ 'gonna', '2' ],
                [ 'planet', '1' ],
                [ 'it\'s', '1' ],
                [ 'bowl', '1' ],
                [ 'a', '1' ],
                [ 'you', '1' ] 
                ],
              type: 'pie'
            },
              legend: {
                position: 'right'
              }
          });

      // Second chart
        var chart2 = c3.generate({
          bindto: '#chart2',
          data: {
              columns: [
                  ['data1', -30, 200, 200, 400, -150, 250],
                  ['data2', 130, 100, -100, 200, -150, 50],
                  ['data3', -230, 200, 200, -300, 250, 250]
              ],
              type: 'bar',
              groups: [
                  ['data1', 'data2']
              ]
          },
          grid: {
              y: {
                  lines: [{value:0}]
              }
          }
        });

      // Tone Gauge Chart - Today
        var toneGaugeTodayChart = c3.generate({
            bindto: '#toneGaugeTodayChart',
            data: {
                columns: [
                    [ 'tnemitnes', '072.07354' ]
                    // [ 'tnemitnes', '0.2' ],
                ],
                type: 'gauge',
                onclick: function (d, i) { console.log("onclick", d, i); },
                onmouseover: function (d, i) { console.log("onmouseover", d, i); },
                onmouseout: function (d, i) { console.log("onmouseout", d, i); }
            },
            size: {
                height: 180
            }
        });

        // Tone Gauge Chart - Week
        var toneGaugeWeekChart = c3.generate({
            bindto: '#toneGaugeWeekChart',
            data: {
                columns: [
                    [ 'tnemitnes', '072.07354' ]
                    // [ 'tnemitnes', '0.2' ],
                ],
                type: 'gauge',
                onclick: function (d, i) { console.log("onclick", d, i); },
                onmouseover: function (d, i) { console.log("onmouseover", d, i); },
                onmouseout: function (d, i) { console.log("onmouseout", d, i); }
            },
            size: {
                height: 180
            }
        });

        // Tone Gauge Chart - Month
        var toneGaugeMonthChart = c3.generate({
            bindto: '#toneGaugeMonthChart',
            data: {
                columns: [
                    [ 'tnemitnes', '072.07354' ],
                ],
                type: 'gauge',
                onclick: function (d, i) { console.log("onclick", d, i); },
                onmouseover: function (d, i) { console.log("onmouseover", d, i); },
                onmouseout: function (d, i) { console.log("onmouseout", d, i); }
            },
            size: {
                height: 180
            }
        });
        // Fourth chart
       var chart4 = c3.generate({
        bindto: '#chart4',
          data: {
              columns: [
                  ['data1', 30, 200, 100, 400, 150, 250],
                  ['data2', 130, 100, 140, 200, 150, 50]
              ],
              type: 'bar'
          },
          bar: {
              width: {
                  ratio: 0.5 // this makes bar width 50% of length between ticks
              }
              // or
              //width: 100 // this makes bar width 100px
          }
      });
      </script>

      <div id="footer">
        <p>This hack was created by team 4321, at LAHacks 2016.</p>
        <p>LA Hacks Â© 2016</p>
      </div>
  </body>
</html>